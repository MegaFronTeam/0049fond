mixin card-wrap2(num)
	
		+b.A.card-item(href="#")
			picture&attributes(attributes)
				img(class="object-fit-js" src=`img/news-${num}.jpg` alt="" loading="lazy") 
			+e.wrap
				+e.date 24 мая 2023
				p Фонд «Защитники Отечества» и Федеральная нотариальная палата заключили соглашение о предоставлении ветеранам СВО бесплатной юридической помощи


mixin sNews(t="Новости")
	// start sNews
	+b.SECTION.sNews.section#sNews&attributes(attributes)
		.container
			.section-title
				.row
					.col
						h2= t
					.col-auto
						a.btn.btn-primary(href="#") Все новости 
			.row
					+e.col.col-lg-6: +card-wrap2('1')
					+e.col.col-lg-6: +card-wrap2('2')
					+e.col.col-lg-6: +card-wrap2('3')
					+e.col.col-lg-6: +card-wrap2('1')
				
	// end sNews